{
  "name": "express-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "watch:frontend": "cd ./frontend && yarn webpack:watch",
    "watch:backend:ts": "yarn watch:ts",
    "dev:backend": "export NODE_ENV=DEVELOPMENT && forever stopall && forever --minUptime 1000 --spinSleepTime 1000 -c \"nodemon --exitcrash\" bin/www.js",
    "dev": "npm-run-all --parallel watch:frontend watch:backend:ts dev:backend",
    "prod": "export NODE_ENV=PRODUCTION && forever stopall && forever --minUptime 1000 --spinSleepTime 1000 -c \"nodemon --exitcrash\" bin/www.js",
    "transpile:ts": "tsc",
    "watch:ts": "tsc -w"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "forever": "^0.15.3",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "pug": "2.0.0-beta11",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "serve-favicon": "^2.5.0",
    "webpack": "4.19.1"
  },
  "devDependencies": {
    "nodemon": "^1.17.5",
    "typescript": "^2.8.1",
    "yarn-run-all": "^3.1.1"
  }
}
